{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "components",
    "data",
    "pages",
    "styles",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
